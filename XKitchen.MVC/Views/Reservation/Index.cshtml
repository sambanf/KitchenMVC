@model IEnumerable<XKitchen.ViewModel.TableViewModel>


<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var item in Model)
                {
                    <button type="button" id="btn-table" class="btn-success btn-lg btn-table" data-id="@item.id" title="@item.Desc">@item.initial</button>
                }
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12" id="rsv-info">
                <h3>Loading...</h3>
            </div>
            <hr />
            <div class="row">
                <div class="col-lg-3 col-lg-offset-2">
                    <button id="btn-new-order" type="button" class="btn btn-success btn-lg">New Order</button>
                </div>
                <div class="col-lg-3 col-lg-offset-2">
                    <button id="btn-payment" type="button" class="btn btn-primary btn-lg">Payment</button>
                </div>
            </div>
        </div>
    </div>
</div>

@* Modal *@
<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Create</h4>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            GetTableById(0);
        });

        function GetTableById(id) {
            $.ajax({
                url: '@Url.Action("GetByTable","Reservation")',
                type: 'get',
                data: {id:id},
                success: function (result) {
                    $('#rsv-info').html(result)
                }
            });
        }

    
        $("#btn-new-order").click(function () {
            $.ajax({
                url: '@Url.Action("Productlist","Reservation")',
                type: 'get',
                success: function (result) {
                    $(".modal-title").html("Create new Table")
                    $(".modal-body").html(result);
                    $(".modal").modal("show")
                },
                error: function (err) {
                    alert(err);
                }
            });

        });

        $(".btn-table").click(function () {
            var tblId = $(this).attr("data-id");
            $.ajax({
                url: '@Url.Action("GetSelectedTable","Reservation")',
                type: 'get',
                data: { id:tblId},
                success: function (result) {
                    if (result.success) {
                        alert('Reserved');
                    }
                    else {
                        createRsv(tblId);
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        });

        function createRsv(tblId) {
            $.ajax({
                url: '@Url.Action("Create","Reservation")',
                type: 'get',
                data: { id: tblId },
                success: function (result) {
                    $(".modal-title").html("Create new Reservation")
                    $(".modal-body").html(result);
                    $(".modal").modal("show")
                }
            });
        }

    </script>
}


